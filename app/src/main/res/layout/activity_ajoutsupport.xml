<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Ajoutsupport"
        android:padding="3dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_addmore"
            android:background="@drawable/round_buttons"
            android:text="Prendre photo"
            app:backgroundTint="#268A3C"
            android:id="@+id/butPhoto"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/imageAjoutSupport"
            android:layout_width="271dp"
            android:layout_height="153dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right|fill_vertical"
                android:text="Libelle : " />

            <EditText
                android:id="@+id/editLibelle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Libelle"
                android:inputType="textPersonName" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right|fill_vertical"
                android:text="Emplacement : " />

            <EditText
                android:id="@+id/editEmplacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Emplacement"
                android:inputType="textPersonName" />

        </LinearLayout>

        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="26dp"
                android:gravity="right|fill_vertical"
                android:text="Superficie TSP : " />

            <Spinner
                android:id="@+id/spinnerTaille"
                android:layout_width="214dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true" />

        </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right|fill_vertical"
                android:text="Type : " />

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/textView6" />

        </LinearLayout>

        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="120dp"
                android:layout_height="34dp"
                android:gravity="right|fill_vertical"
                android:text="Superficie ODP : " />

            <Spinner
                android:id="@+id/spinnerSuperficie"
                android:layout_width="216dp"
                android:layout_height="41dp"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignStart="@+id/editLibelle" />

        </LinearLayout>
        -->


        <TextView
            android:id="@+id/textPatientez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:text="Patientez ..."
            android:textColor="@color/design_default_color_primary" />

        <ProgressBar
            android:layout_marginTop="10dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_save"
            android:background="@drawable/round_buttons"
            android:text="Enregistrer"
            app:backgroundTint="#0766BA"
            android:id="@+id/butEnregSup"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</layout>